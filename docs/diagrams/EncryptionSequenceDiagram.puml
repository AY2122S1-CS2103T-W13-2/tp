@startuml
!include style.puml

box Logic LOGIC_COLOR_T1
participant ":LogicManager" as LogicManager LOGIC_COLOR
end box

box Encryption
participant ":Cryptor" as Cryptor ENCRYPTION_COLOR
end box

box Storage STORAGE_COLOR_T1
participant ":Storage" as Storage STORAGE_COLOR
end box

participant "<color:#red>**<<class>>**\n<color:#black>FileUtil" as FileUtil

[-> LogicManager : execute(...)
activate LogicManager

LogicManager -> Cryptor : decrypt()
activate Cryptor

Cryptor --> LogicManager
deactivate Cryptor

LogicManager -> Storage : saveAddressBook()
activate Storage

Storage --> LogicManager
deactivate Storage

LogicManager -> Cryptor : encrypt()
activate Cryptor

Cryptor --> LogicManager
deactivate Cryptor

LogicManager -> FileUtil : deleteFile()
activate FileUtil

FileUtil --> LogicManager
deactivate FileUtil

[<--LogicManager
deactivate LogicManager
@enduml
